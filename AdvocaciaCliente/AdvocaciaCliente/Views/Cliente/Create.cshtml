<h1>Cadastro de Cliente</h1>

<form action="/Cliente/Create" method="post">
    <div class="form-group">
        <label for="idonme">Nome</label>
        <input type="text" class="form-control" id="idnome" name="idnome" aria-describedby="nome" placeholder="Digite o nome" required>
    </div>
    <div class="form-group">
        <label for="idendereco">Endereço</label>
        <input type="text" class="form-control" id="idendereco" name="idendereco" aria-describedby="endereco" required>
    </div>
    <div class="form-group">
        <label for="idnumero">Número</label>
        <input type="number" class="form-control" id="idnumero" name="idnumero" aria-describedby="numero" required>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>